{% extends "::base.html.twig" %}
{% block title %}Control{% endblock title %}
{% block navigation %}{% endblock navigation %}
{% block pageType %}{% endblock pageType %}
{% block stylesheets %}
    <!--  control admin css   -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/animate.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/light-bootstrap-dashboard.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" href="{{ asset('css/demo.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/pe-icon-7-stroke.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/font.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/awesome.css') }}"/>
{% endblock stylesheets %}
{% block body %}
    <div class="wrapper">
        <div class="sidebar" data-color="green" data-image="{{ asset('img/fond_login.jpg') }}">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="{{ path('ecommerce_control') }}" class="simple-text">
                        Tableau de bord
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="{{ path('ecommerce_control') }}">
                            <i class="pe-7s-graph"></i>
                            <p>Statistique</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="{{ path('ecommerce_control_user') }}">
                            <i class="pe-7s-user"></i>
                            <p>Utilisateur</p>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_control_medicament') }}">
                            <i class="pe-7s-note2"></i>
                            <p>Arrivage stock</p>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_control_fournisseur') }}">
                            <i class="pe-7s-phone"></i>
                            <p>Fournisseur</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Utilisateur</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-globe"></i>
                                    <b class="caret"></b>
                                    <span class="notification">5</span>
                                </a>
                                <ul class="dropdown-menu">
                                    {% for i in 1..5 %}
                                        <li><a href="#">Vous avez achetez {{ i }} [medicament]
                                                le {{ "now"|date("d/ M/Y") }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#">
                                    {{ app.user.username }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path("fos_user_security_logout") }}">
                                    <span class="glyphicon glyphicon-log-out"></span>
                                    Se d√©connecter
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    {#{% trans_default_domain 'FOSUserBundle' %}
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {{ form_widget(form) }}
                    <div>
                        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}#}

                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    <div class="form-group">
                        {{ form_label(form.current_password, "Mot de passe actuel") }}
                        {{ form_errors(form.current_password) }}
                        {{ form_widget(form.current_password, {'attr': {'class':'form-current_password form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, "Nouveau mot de passe") }}
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class':'form-plainPassword-first form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, "Confirmation mot de passe") }}
                        {{ form_errors(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class':'form-plainPassword-second form-control'} }) }}
                    </div>
                    {{ form_widget(form._token) }}
                    <button type="reset" class="btn btn-danger">Annuler</button>
                    <button type="submit" class="btn btn-success">Changer</button>
                    {{ form_end(form) }}
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Accueil
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Mon Panier
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy; 2016 <a href="http://facebook.com/rakotondratompobakoharry">Bako Harry
                            Rakotondratompo</a>, made with love for a better web
                    </p>
                </div>
            </footer>

        </div>

    </div>
{% endblock body %}
{% block footer %}{% endblock footer %}
{% block javascripts %}
    <!--   Core JS Files   -->
    <script src="{{ asset('js/jquery-1.10.2.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>

    <!--  Checkbox, Radio & Switch Plugins -->
    <script src="{{ asset('js/bootstrap-checkbox-radio-switch.js') }}"></script>

    <!--  Charts Plugin -->
    <script src="{{ asset('js/chartist.min.js') }}"></script>

    <!--  Notifications Plugin    -->
    <script src="{{ asset('js/bootstrap-notify.js') }}"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="{{ asset('js/light-bootstrap-dashboard.js') }}"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="{{ asset('js/demo.js') }}"></script>

{% endblock javascripts %}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medicament</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicament.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ medicament.libelle }}</td>
            </tr>
            <tr>
                <th>Picturename</th>
                <td>{{ medicament.pictureName }}</td>
            </tr>
            <tr>
                <th>Dose</th>
                <td>{{ medicament.dose }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ medicament.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medicament_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('medicament_edit', { 'id': medicament.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
